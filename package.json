{
  "name": "annhub",
  "version": "0.1.0",
  "description": "Browser extension for annotation, comment, capture, and share anywhere",
  "private": true,
  "type": "module",
  "scripts": {
    "dev": "wxt",
    "dev:firefox": "wxt -b firefox",
    "build": "wxt build",
    "build:firefox": "wxt build -b firefox",
    "build:sidebar": "node scripts/build-sidebar.js && wxt build",
    "zip": "wxt zip",
    "zip:firefox": "wxt zip -b firefox",
    "compile": "tsc --noEmit",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:e2e": "playwright test",
    "test:e2e:headed": "playwright test --headed",
    "test:e2e:ui": "playwright test --ui",
    "postinstall": "wxt prepare",
    "check:sidebar": "node scripts/build-sidebar.js",
    "website:dev": "cd website && npm run dev",
    "website:build": "cd website && npm install && npm run build",
    "website:start": "cd website && npm run start",
    "website:deploy": "cd website && npm install && npm run build",
    "format": "prettier --write '**/*.{tsx,ts,json,css,scss,md}'"
  },
  "dependencies": {
    "@radix-ui/react-slot": "^1.2.3",
    "@webext-core/proxy-service": "^2.0.0",
    "@wxt-dev/i18n": "^0.2.4",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "crypto-js": "^4.2.0",
    "dom-to-image": "^2.6.0",
    "fabric": "^7.1.0",
    "html2canvas": "^1.4.1",
    "idb": "^8.0.3",
    "lucide-react": "^0.574.0",
    "nanoid": "^5.1.5",
    "react": "^19.2.0",
    "react-dom": "^19.2.0",
    "react-router-dom": "^7.6.2",
    "tailwind-merge": "^3.4.1",
    "zustand": "^5.0.11"
  },
  "devDependencies": {
    "@playwright/test": "^1.58.2",
    "@types/chrome": "^0.1.36",
    "@types/crypto-js": "^4.2.2",
    "@types/dom-to-image": "^2.6.7",
    "@types/node": "^24.0.3",
    "@types/react": "^19.2.14",
    "@types/react-dom": "^19.1.3",
    "@types/react-router-dom": "^5.3.3",
    "@wxt-dev/module-react": "^1.1.3",
    "autoprefixer": "^10.4.24",
    "jsdom": "^26.1.0",
    "postcss": "^8.5.6",
    "prettier": "^3.0.3",
    "tailwindcss": "^3.4.19",
    "tailwindcss-animate": "^1.0.7",
    "typescript": "^5.8.3",
    "vitest": "^4.0.18",
    "wxt": "^0.20.17"
  },
  "engines": {
    "node": ">=24.0.0"
  }
}